rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Public Booking: Anyone can create, but only admins can read/update/delete
    match /bookings/{bookingId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }

    // Service Menus: Public read, Admin write
    match /serviceMenus/{menuId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Clients: Admin only
    match /clients/{clientId} {
      allow read, write: if isAuthenticated();
    }

    // Training Data: Admin only
    match /training_data/{dataId} {
      allow read, write: if isAuthenticated();
    }

    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Logs: Public create (for error reporting), Admin read
    match /app_logs/{logId} {
      allow create: if true;
      allow read: if true; // Temporarily allow public read for debugging
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
